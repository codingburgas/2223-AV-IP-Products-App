@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Add a product</h1>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Description
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="30%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.Description
                </td>
            </tr>
        }
    </tbody>
</table>